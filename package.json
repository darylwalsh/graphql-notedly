{
  "name": "notedly-ts",
  "version": "0.1.0",
  "description": "TypeScript version of notedly React app",
  "main": "commitlint.config.js",
  "scripts": {
    "commit": "git-cz",
    "build": "...",
    "lint": "eslint api/src/**",
    "styleguide:build": "...",
    "prettier:check": "prettier --check 'api/src/**/*.{js,ts,tsx,js}'",
    "validate": "run-s test lint prettier:check",
    "prerelease": "git-authors-cli && git add .",
    "release": "standard-version -a",
    "postrelease": "run-s release:*",
    "release:tags": "git push --follow-tags origin development",
    "release:github": "conventional-github-releaser -p angular",
    "ci:validate": "rm -rf node_modules && npm ci && npm run validate",
    "prepublishOnly": "npm run ci:validate && npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": "git+https://github.com/darylwalsh/graphql-notedly.git",
  "keywords": [
    "React",
    "TypeScript",
    "GraphQL",
    "ReactNative",
    "Electron"
  ],
  "author": "Daryl",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/darylwalsh/graphql-notedly/issues"
  },
  "homepage": "https://github.com/darylwalsh/graphql-notedly#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "^2.13.0",
    "@typescript-eslint/parser": "^2.8.0",
    "babel-eslint": "^10.0.3",
    "chalk": "^2.4.2",
    "commitizen": "^4.0.3",
    "conventional-changelog-cli": "^2.0.23",
    "conventional-github-releaser": "^3.1.3",
    "cz-adapter-eslint": "^0.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "git-authors-cli": "^1.0.18",
    "husky": "^3.1.0",
    "lint-staged": "^9.5.0",
    "node-fetch": "^2.6.0",
    "now": "^16.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "randomstring": "^1.1.5",
    "rimraf": "^3.0.0",
    "scaffdog": "^0.1.2",
    "standard-version": "^7.0.1",
    "thread-loader": "^2.1.3",
    "typescript": "^3.7.4"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "api/src/**/*.mdx": [
      "prettier --write",
      "git add"
    ],
    "api/src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "contributors": [
    "Daryl <daryl@blpc.us>"
  ]
}
